								<include name="**/*.pdf" />
							</fileset>
						</copy>
                        <copy todir="target/site/reference/html">
                            <fileset dir="src/docbkx/resources">
								<include name="**/*.css" />
								<include name="**/*.png" />
								<include name="**/*.gif" />
								<include name="**/*.jpg" />
							</fileset>
						</copy>
                        <move file="target/site/reference/pdf/index.pdf" tofile="target/site/reference/pdf/spring-ldap-reference.pdf" failonerror="false" />
					</postProcess>
				</configuration>
			</plugin>
