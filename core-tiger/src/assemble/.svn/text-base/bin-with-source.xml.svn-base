<assembly>
	<id>assembly</id>
	<formats>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>target</directory>
			<includes>
				<include>*.jar</include>
			</includes>
			<outputDirectory>dist</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/java</directory>
			<includes>
				<include>**/*.java</include>
			</includes>
			<outputDirectory>src</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>
